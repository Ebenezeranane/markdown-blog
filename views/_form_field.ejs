<div class="form-group">
  <label for="title">Title</label>
  <input type="text" value="<%= article.title%> "  name="title" id="title" class="form-control" placeholder="" aria-describedby="helpId">
  
  <label for="Description ">Description</label>
  <textarea name="description" id="description" cols="20" rows="5" class="form-control"><%= article.description %> </textarea>

  <label for="markdown ">Markdown</label>
  <textarea name="markdown" id="markdown" cols="30" rows="10" class="form-control" required><%= article.sanitizedHtml  %> </textarea>
  <a href="/" class="btn btn-secondary">Cancel</a>
  <button type="submit" class="btn btn-primary ">Save</button>
</div>